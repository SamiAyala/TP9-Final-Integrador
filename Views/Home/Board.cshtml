@{
    ViewData["Title"] = ViewBag.Board.Nombre;

}
<div class="Board">
    <h1 class="display-4">@ViewBag.Board.Nombre</h1>
    <button class="btn btn-dark my-3 mx-auto" id="BoardButton" type="button" data-bs-toggle="collapse" data-bs-target="#collapseForm"
        aria-expanded="false" aria-controls="collapseForm">
        Create Post
    </button>
</div>
<div class="collapse mb-3 mx-auto" id="collapseForm" style="width:40%;">
    <div class="form">
        <form method="post" id="form" action='@Url.Action("AgregarPost", "Home")'>
            <input type="hidden" name="IdBoard" value="@ViewBag.Board.IdBoard">
            <input type="hidden" name="FkPost" value='Null'>
            <input required type="text" name="Titulo" class="form-control fw-bold" placeholder="Title">
            <br>
            <textarea required class="form-control" name="Descripcion" rows="5" cols="50" placeholder="Text"
                class="my-2"></textarea>
            <br>
            <input type="file" class="float-start pForm" multiple>
            <input type="submit" class="btn btn-dark float-end" value="Post">
            <br>
        </form>
    </div>
</div>
<div class="BoardPosts">
    @{
        if (ViewBag.ListPosts.Count == 0)
        { 
            <h2 class="text-center">No posts yet. Be the first one!</h2>
        }
        else
        {
            <div class="row justify-content-around">
                @foreach (Post item in ViewBag.ListPosts)
                {
                <div class="card col-auto mx-2 mb-4" id="cardPost">
                    <img class="card-img-top" src="@item.Imagen" alt="No Image Available">
                    <div class="card-body">
                        <h5 class="card-title">@item.Titulo</h5>
                        <p class="card-text">@item.Descripcion</p>
                    </div>
                    <div class="card-footer border-top">
                        <h6 class="card-subtitle mb-2 text-muted">@item.FechaCreacion.ToShortDateString()</h6>
                        <a class="btn btn-dark" id="BoardButton" href='@Url.Action("CargarPost", "Home", new{id=@item.IdPost})'>See Post</a>
                    </div>
                </div>
                }
            </div>
        }
    }
</div>